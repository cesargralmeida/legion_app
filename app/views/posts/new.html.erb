<% provide(:title, "Novo Post") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :content %>
      <%= f.text_field :content %>

      <%= f.label :op %>
      <%= f.text_field :op %>

      <%= f.submit "Postar", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>